@import 'nib'

yellow = #f7e8bc
lightgray = #eee
gray = #ddd
grayer = #aaa
darkgray = #666

*
  margin: 0
  padding: 0
  box-sizing: border-box
  -webkit-font-smoothing: antialiased

html, body
  height: 100%

body
  font-family: "Helvetica", "Arial", sans-serif
  font-size: 62.5%
  color: darkgray
  -webkit-font-smoothing: antialiased
  background: lightgray

  input
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    height: 80px
    border: 0
    border-top: 1px solid gray
    outline: none
    font-size: 30px
    font-family: "Helvetica", "Arial", sans-serif
    padding: 0 15px
    &:focus
      background: yellow

  #conversation
    position: absolute
    bottom: 0
    max-height: 100%
    width: 100%
    padding-bottom: 80px
    overflow: auto
    li
      font-size: 30px
      border-top: 1px dotted gray
      padding: 10px 15px
      line-height: 1.4em
      &:first-child
        border: 0
      &.notification
        color: grayer