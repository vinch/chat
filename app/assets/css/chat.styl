@import 'nib'

yellow = #f7e8bc
lightgray = #eee
gray = #ddd
grayer = #aaa
darkgray = #666

*
  margin: 0
  padding: 0
  box-sizing: border-box
  -webkit-font-smoothing: antialiased

html, body
  width: 100%
  height: 100%
  overflow: hidden

body
  font-family: "Helvetica", "Arial", sans-serif
  font-size: 62.5%
  color: darkgray
  -webkit-font-smoothing: antialiased
  background: lightgray

  #message
    position: absolute
    bottom: 0
    width: 100%
    height: 80px
    border-top: 1px solid gray
    z-index: 100
    input, button
      -webkit-appearance: none
      display: block
      height: 79px
      border: 0
      border-radius: 0
      outline: none
      font-size: 30px
      font-family: "Helvetica", "Arial", sans-serif
      padding: 0 15px
    input
      float: left
      width: calc(100% - 120px)
      &:focus
        background: yellow
    button
      float: right
      width: 120px
      background: gray
      cursor: pointer
      color: darkgray
      text-align: center
      &:hover
        background: grayer
        color: lightgray

  #conversation
    width: 100%
    height: calc(100% - 80px)
    overflow: auto
    li
      font-size: 30px
      border-top: 1px dotted gray
      padding: 10px 15px
      line-height: 1.4em
      &:first-child
        border: 0
      &.notification
        color: grayer

@media only screen and (max-width : 800px)
  body
    #message
      height: 50px
      input, button
        height: 50px
        font-size: 20px
        padding: 0 10px
      input
        width: calc(100% - 75px)
      button
        width: 75px
    #conversation
      padding-bottom: 50px
      li
        font-size: 20px
        padding: 10px
